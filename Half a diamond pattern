/* Pattern to be printed 
1
12
123
1234
12345
1234
123
12
1
*/

/* CODE */
#include <stdio.h>
void main()
{
    int n,i,j;
    printf("Enter a number ");
    scanf("%d",&n);
    
    for (i=0;i<=n;i++)
    {
        for (j=1;j<=i;j++)
        {
            printf("%d",j);
        }
        
        printf("\n");
    }
    
    for (i=0;i<=n;i++)
    {
        for (j=1;j<n-i;j++)
        {
            printf("%d",j);
        }
        printf("\n");
    }
}
