/* Pattern to be printed
* 
 * 
  * 
   * 
    * 
*/

/* Code */
#include <stdio.h>
void main()
{
    int i,j;
    char sp=" ";
    for (i=1;i<=5;i++)
    {
        for (j=1;j<=i;j++)
        {
            if (i==j)
            {
                printf("* ");
            }
            else
            {
                printf("%c ",sp);
            }
        }
        printf("\n");
    }
}
