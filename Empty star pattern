/*Pattern to be printed :-
* * * * * * * 
* * *   * * * 
* *       * * 
*           * 
* *       * * 
* * *   * * * 
* * * * * * * 
*/

/*Code in c*/
#include <stdio.h>
void main()
{
    int i,j;
    char sp;
    for (i=1;i<5;i++)
    {
        for (j=5-i;j>=1;j--)
        {
            printf("* ");
        }
        for (j=1;j<i;j++)
        {
            printf("%c ",sp);
        }
        for (j=1;j<i-1;j++)
        {
            printf("%c ",sp);
        }
        if (i!=1)
        {
            for (j=5-i;j>=1;j--)
            {
                printf("* ");
            }
        }
        else
        {
            for (j=4-i;j>=1;j--)
            {
                printf("* ");
            }
        }
        
        
        printf("\n");
    }
    
    for (i=3;i>=1;i--)
    {
        for (j=5-i;j>=1;j--)
        {
            printf("* ");
        }
        for (j=1;j<i;j++)
        {
            printf("%c ",sp);
        }
        for (j=1;j<i-1;j++)
        {
            printf("%c ",sp);
        }
        if (i!=1)
        {
            for (j=5-i;j>=1;j--)
            {
                printf("* ");
            }
        }
        else
        {
            for (j=4-i;j>=1;j--)
            {
                printf("* ");
            }
        }
        
        
        printf("\n");
    }
    
}
