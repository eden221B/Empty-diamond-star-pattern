/*
    1
   212
  32123
 4321234
543212345
*/

/* CODE */
#include <stdio.h>

void main()
{
    int i,j,n;
    char sp;
    printf("Enter a number ");
    scanf("%d",&n);
    
    for (i=1;i<=n;i++)
    {
        for (j=n-1;j>=i;j--)
        {
            printf("%c",sp);
        }
        for (j=i;j>=1;j--)
        {
            printf("%d",j);
        }
        for (j=2;j<=i;j++)
        {
            printf("%d",j);
        }
    
        
        printf("\n");
    }
}
